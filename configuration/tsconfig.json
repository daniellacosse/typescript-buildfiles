{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": ".make",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["apps/**/*", "library/**/*"],
  "exclude": [
    ".make",
    ".github",
    ".vscode",
    ".storybook",
    "node_modules",
    "**/*.test.ts"
  ]
}

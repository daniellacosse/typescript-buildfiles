{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom", "scripthost"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    // "outDir": ".make/dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  // we exclude these files to save typescript from having to go through them
  "exclude": [
    ".circleci",
    ".make",
    ".github",
    ".vscode",
    "artifacts",
    "node_modules"
  ]
}
